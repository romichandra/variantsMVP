<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:layout_height="@dimen/list_item_height">

    <CheckedTextView
        android:id="@+id/list_item_singlecheck_variant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="@dimen/list_item_left_margin"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="14sp"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:textAllCaps="true"
        tools:text="Variant Name" />

    <TextView
        android:id="@+id/list_item_singlecheck_variant_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/list_item_singlecheck_variant_name"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:textStyle="italic"
        tools:text="stock" />

    <TextView
        android:id="@+id/list_item_singlecheck_variant_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_singlecheck_variant_stock"
        android:layout_toRightOf="@+id/list_item_singlecheck_variant_stock"
        android:layout_marginLeft="16dp"
        android:textStyle="italic"
        tools:text="price" />


</RelativeLayout>
